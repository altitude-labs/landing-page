---
import SectionBadge from './ui/SectionBadge.astro';
import FAQCard from './ui/FAQCard.astro';
import backgroundLetters2 from '../assets/background-letters2.svg';
---

<section class="relative py-0 pb-20 md:pb-32 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-[#020921] via-[#030b2a] to-[#050F2F] overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0">
    <!-- Pattern background avec dégradé d'opacité -->
    <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[1585px] h-[1053px]">
      <img 
        src={backgroundLetters2.src} 
        alt="" 
        class="w-full h-full object-contain"
        style="mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%); -webkit-mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%);"
      />
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="flex flex-col items-center text-center mb-12 md:mb-20">
      <!-- Section Badge -->
      <SectionBadge text="Q&A" />
      
      <!-- Titre principal -->
      <h2 class="text-white font-bold text-2xl md:text-4xl lg:text-5xl leading-tight max-w-2xl mx-auto">
        Frequently Asked Questions
      </h2>
    </div>

    <!-- FAQ Cards -->
    <div class="max-w-md mx-auto md:max-w-2xl lg:max-w-4xl">
      <div class="flex flex-col gap-5">
