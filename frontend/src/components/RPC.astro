---
import SectionBadge from './ui/SectionBadge.astro';
import RPCCard from './ui/RPCCard.astro';
---

<section class="relative py-20 md:py-32 px-4 sm:px-6 lg:px-8 bg-[#020921]">
  <div class="max-w-7xl mx-auto">
    <!-- Mobile Layout -->
    <div class="lg:hidden">
      <!-- Header Section -->
      <div class="flex flex-col items-start mb-12 md:mb-20">
        <!-- Section Badge -->
        <div class="mb-10">
          <SectionBadge text="RPC Services" />
        </div>
        
        <!-- Titre et sous-titre -->
        <div class="mb-10 max-w-2xl">
          <h2 class="text-white font-bold text-2xl md:text-4xl lg:text-5xl leading-tight mb-4">
            The speed and reliability behind our dApp?
          </h2>
          <p class="text-light-blue font-medium text-base md:text-lg leading-relaxed tracking-tight">
            It's the same infrastructure we offer to others.
          </p>
        </div>
        
        <!-- Boutons CTA -->
        <div class="flex flex-wrap items-center gap-2">
          <button class="bg-primary-blue hover:bg-opacity-90 text-white font-medium text-sm px-4 py-2 rounded-full transition-all duration-200 tracking-tight">
            Learn more
          </button>
          <button class="border-2 border-primary-blue text-white hover:bg-primary-blue/10 font-medium text-sm px-4 py-2 rounded-full transition-all duration-200 tracking-tight">
            View Plans
          </button>
        </div>
      </div>

      <!-- RPC Cards Container - Mobile -->
      <div class="max-w-md mx-auto md:max-w-2xl">
        <div class="bg-[#050f2f] rounded-[20px] p-2.5">
          <div class="flex flex-col">
            <RPCCard 
              title="Private RPC Endpoints"
              description="Get dedicated, high-performance RPC endpoints designed for consistent throughput and zero congestion."
              hasHoverEffect={true}
            />
            <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent my-2.5"></div>
            <RPCCard 
              title="Low Latency by Design"
              description="Altitude's RPC stack delivers sub-second response times — perfect for MEV, copytrading, or active users."
            />
            <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent my-2.5"></div>
            <RPCCard 
              title="Custom APIs & Tooling"
              description="Request bespoke APIs that fit your app's needs — from indexing to advanced execution logic."
            />
            <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent my-2.5"></div>
            <RPCCard 
              title="Fully Managed Infra"
              description="We deploy, monitor, and maintain your nodes so you can focus on building — not debugging."
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop Layout -->
    <div class="hidden lg:block">
      <!-- Section Badge -->
      <div class="mb-10">
        <SectionBadge text="RPC Services" />
      </div>
      
      <!-- Title and Description Row -->
      <div class="flex items-center justify-between mb-[100px]">
        <!-- Left: Title -->
        <div class="flex-1 max-w-[832px]">
          <h2 class="text-white font-bold text-[80px] leading-[80px]">
            The speed and reliability behind our dApp?
          </h2>
        </div>
        
        <!-- Right: Description and Buttons -->
        <div class="flex flex-col items-end gap-[30px]">
          <p class="text-light-blue font-medium text-[25px] leading-[1.4] tracking-[-0.5px] text-right w-[323px]">
            It's the same infrastructure we offer to others.
          </p>
          <div class="flex items-center gap-2.5">
            <button class="bg-primary-blue hover:bg-opacity-90 text-white font-medium text-base px-[25px] py-3 rounded-[28px] transition-all duration-200 tracking-[-0.32px]">
              Learn More
            </button>
            <button class="border-2 border-primary-blue text-white hover:bg-primary-blue/10 font-medium text-base px-[25px] py-3 rounded-[28px] transition-all duration-200 tracking-[-0.32px]">
              View Plans
            </button>
          </div>
        </div>
      </div>

      <!-- RPC Cards Container - Desktop Horizontal -->
      <div class="bg-[#050f2f] rounded-[20px] p-2.5">
        <div class="flex gap-2.5">
          <div class="flex-1">
            <RPCCard 
              title="Private RPC Endpoints"
              description="Get dedicated, high-performance RPC endpoints designed for consistent throughput and zero congestion."
              hasHoverEffect={true}
              isDesktop={true}
            />
          </div>
          <div class="w-px bg-gradient-to-b from-transparent via-white/20 to-transparent"></div>
          <div class="flex-1">
            <RPCCard 
              title="Low Latency by Design"
              description="Altitude's RPC stack delivers sub-second response times — perfect for MEV, copytrading, or active users."
              isDesktop={true}
            />
          </div>
          <div class="w-px bg-gradient-to-b from-transparent via-white/20 to-transparent"></div>
          <div class="flex-1">
            <RPCCard 
              title="Custom APIs & Tooling"
              description="Request bespoke APIs that fit your app's needs — from indexing to advanced execution logic."
              isDesktop={true}
            />
          </div>
          <div class="w-px bg-gradient-to-b from-transparent via-white/20 to-transparent"></div>
          <div class="flex-1">
            <RPCCard 
              title="Fully Managed Infra"
              description="We deploy, monitor, and maintain your nodes so you can focus on building — not debugging."
              isDesktop={true}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
