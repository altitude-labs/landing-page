---
import backgroundLetters from '../../assets/background-letters.svg';

export interface Props {
  title: string;
  description: string;
  hasHoverEffect?: boolean;
  isDesktop?: boolean;
}

const { title, description, hasHoverEffect = false, isDesktop = false } = Astro.props;
---

{hasHoverEffect ? (
  <!-- RPC Card avec effet hover spécial -->
  <div class={`group relative bg-[#020921] rounded-[10px] p-[30px] md:p-[40px] w-full overflow-hidden transition-all duration-300 ${isDesktop ? 'h-[248px]' : ''}`}>
    <!-- Pattern background (caché par défaut, visible au hover) -->
    <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[965px] h-[641px] opacity-100 group-hover:opacity-100 transition-opacity duration-300">
      <img 
        src={backgroundLetters.src} 
        alt="" 
        class="w-full h-full object-contain"
      />
    </div>
    
    <!-- Gradient de lueur du bas vers le haut (caché par défaut, visible au hover) -->
    <div class="absolute inset-0 bg-gradient-to-t from-[#7795FA66]/40 via-[#7795FA33]/20 to-transparent opacity-100 group-hover:opacity-100 transition-opacity duration-300 rounded-[10px]"></div>
    
    <!-- Contenu -->
    <div class="relative z-10 flex flex-col gap-5">
      <h3 class={`text-white font-medium tracking-[-0.4px] leading-tight ${isDesktop ? 'text-xl' : 'text-xl'}`}>
        {title}
      </h3>
      <p class={`text-primary-blue font-medium leading-[1.6] tracking-[-0.32px] ${isDesktop ? 'text-base' : 'text-base'}`}>
        {description}
      </p>
    </div>
  </div>
) : (
  <!-- RPC Card normale -->
  <div class={`bg-[#020921] rounded-[10px] p-[30px] md:p-[40px] w-full ${isDesktop ? 'h-[248px]' : ''}`}>
    <div class="flex flex-col gap-5">
      <h3 class={`text-white font-medium tracking-[-0.4px] leading-tight ${isDesktop ? 'text-xl' : 'text-xl'}`}>
        {title}
      </h3>
      <p class={`text-white/50 font-medium leading-[1.6] tracking-[-0.32px] ${isDesktop ? 'text-base' : 'text-base'}`}>
        {description}
      </p>
    </div>
  </div>
)}
