---
import heroVideo from '../assets/ALTITRAILER_MAIN_FINAL_CORRECTED.mp4';
---
<section class="relative flex flex-col justify-center min-h-[70vh] md:min-h-screen mt-12 md:mt-0 md:pt-20 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-left md:text-center">
    <div class="max-w-md md:max-w-2xl lg:max-w-4xl mx-auto">
      
      <!-- Titre principal -->
      <h1 class="text-white font-bold text-3xl md:text-5xl lg:text-7xl leading-tight mb-5 md:mb-6">
        Embark on a journey<br class="hidden md:block" />
        to higher peaks.
      </h1>
      
      <!-- Sous-titre -->
      <p class="text-light-blue font-medium text-lg md:text-xl lg:text-2xl leading-relaxed mb-8 md:mb-10 tracking-tight">
        Built for speed, clarity, and execution — on HyperEVM.
      </p>
    </div>
  </div>

  <!-- Trading interface mockup and CTA button container -->
  <div class="relative mt-12 md:mt-16 w-full flex flex-col items-center">
    <!-- Bouton CTA -->
    <div class="relative z-20 mb-[-30px]">
      <div class="absolute inset-0 bg-accent-blue opacity-30 blur-[10px] rounded-full transform scale-110"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-primary-blue to-transparent opacity-20 rounded-full"></div>
      <button class="relative z-10 bg-primary-blue hover:bg-opacity-90 text-white font-medium text-base px-8 py-3 rounded-full transition-all duration-300 ease-in-out transform hover:scale-105 hover:shadow-xl">
        Start Trading
      </button>
    </div>
    
    <!-- Trading interface mockup -->
    <div class="w-full px-4 sm:px-6 lg:px-8 flex justify-center">
      <div class="max-w-md md:max-w-2xl lg:max-w-5xl w-full">
        <div class="relative bg-gradient-to-b from-[#0D1C50] to-[#050F2F] backdrop-blur-sm rounded-xl p-4 md:p-12 shadow-2xl">
          <!-- Effet lumineux gauche vers le haut -->
          <div class="absolute left-0 top-1/5 w-px h-1/3 bg-gradient-to-b from-blue-500/20 via-blue-500/60 to-blue-500/20"></div>
          
          <!-- Effet lumineux droite vers le bas -->
          <div class="absolute right-0 bottom-1/5 w-px h-1/3 bg-gradient-to-t from-blue-500/20 via-blue-500/60 to-blue-500/20"></div>
          
          <div class="absolute inset-0 top-3/4 bg-gradient-to-b from-transparent to-[#050F2F]/60 rounded-xl"></div>
          
          <div class="relative z-10">
            <div class="aspect-video bg-gradient-to-br from-primary-blue/10 to-secondary-blue/10 rounded-lg border border-white/10 overflow-hidden">
              <video class="w-full h-full object-cover" autoplay loop muted playsinline>
                <source src={heroVideo} type="video/mp4" />
                Votre navigateur ne supporte pas la balise vidéo.
              </video>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>