---
import { Image } from 'astro:assets';
import SectionBadge from './ui/SectionBadge.astro';
import FAQCard from './ui/FAQCard.astro';
import backgroundLettersDesktop from '../assets/background-letters-desk.svg';
import backgroundLettersMobile from '../assets/background-letters.svg';
---

<section id="faq" class="relative py-0 pb-20 md:pb-32 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-[#020921] via-[#030b2a] to-[#050F2F] overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0">
    <!-- Pattern background mobile avec dégradé d'opacité (hidden on lg+) -->
    <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[667px] lg:hidden">
      <Image
        src={backgroundLettersMobile}
        alt="background letters pattern mobile"
        class="w-full h-full object-cover opacity-40"
        style="mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%); -webkit-mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%);"
      />
    </div>

    <!-- Pattern background desktop avec dégradé d'opacité (hidden on <lg) -->
    <div class="absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[1585px] h-[1053px] hidden lg:block">
      <Image
        src={backgroundLettersDesktop}
        alt="background letters pattern desktop"
        class="w-full h-full object-cover"
        style="mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%); -webkit-mask: linear-gradient(to bottom, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.3) 30%, rgba(255,255,255,0.7) 70%, rgba(255,255,255,1) 100%);"
      />
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="flex flex-col items-center text-center mb-12 md:mb-20">
      <!-- Section Badge -->
      <SectionBadge text="Q&A" />
      
      <!-- Titre principal -->
      <h2 class="text-white font-bold text-2xl md:text-4xl lg:text-5xl leading-tight max-w-2xl mx-auto">
        Frequently Asked Questions
      </h2>
    </div>

    <!-- FAQ Cards -->
    <div class="max-w-md mx-auto md:max-w-2xl lg:max-w-4xl">
      <div class="flex flex-col gap-5 faq-card-wrapper">
        <!-- FAQ 1 - Expanded -->
        <FAQCard 
          question="How do I start trading on Altitude?"
          answer="Create an account, connect your wallet, and you’re ready to trade instantly."
          isExpanded={true}
        />
        
        <!-- FAQ 2 -->
        <FAQCard 
          question="Are there any fees?"
          answer="We keep fees transparent. We take 1% of all volume generated on our platform."
        />
        
        <!-- FAQ 3 -->
        <FAQCard 
          question="Which tokens can I trade?"
          answer="Altitude supports all tokens on HyperEVM, with live scanning to find the most active and trending ones."
        />
        
        <!-- FAQ 4 -->
        <FAQCard 
          question="Is my data secure?"
          answer="Yes. We use encrypted connections and industry-grade security practices to keep your funds and data safe."
        />
        
        <!-- FAQ 5 -->
        <FAQCard 
          question="How fast are transactions?"
          answer="Trades execute in seconds thanks to our ultra-fast order routing and low-latency infrastructure."
        />
      </div>
    </div>
  </div>
</section>