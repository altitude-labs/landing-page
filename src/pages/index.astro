---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Benefits from '../components/Benefits.astro';
import Features from '../components/Features.astro';
import RPC from '../components/RPC.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import backgroundLettersDesktop from '../assets/background-letters-desk.svg';
import backgroundLettersMobile from '../assets/background-letters.svg';
import "../styles/global.css";
---

<Layout>
	<!-- Wrapper avec background partagé pour header et hero -->
	<div class="relative min-h-[80vh] md:min-h-screen bg-primary-dark overflow-hidden">
		<!-- Background avec gradients et effets -->
		<div class="absolute inset-0">
			<!-- Gradient principal -->
			<div class="absolute inset-0 bg-gradient-to-t from-[#0D1C50] to-transparent"></div>
			
			<!-- Effets de lueur pour correspondre à Figma -->
			<!-- Mobile (comportement précédent) -->
			<div class="md:hidden absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[300px] h-[200px] bg-primary-blue opacity-10 blur-[75px] rounded-full"></div>
			<div class="md:hidden absolute top-1/4 right-1/4 w-[200px] h-[200px] bg-secondary-blue opacity-20 blur-[100px] rounded-full"></div>

			<!-- Desktop (nouvelle version Figma) -->
			<div class="hidden md:block absolute top-1/2 left-3/4 transform -translate-x-1/2 -translate-y-1/2 w-[700px] h-[700px] bg-primary-blue opacity-40 blur-[260px] rounded-full"></div>
			<div class="hidden md:block absolute top-0 left-1/4 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary-blue opacity-40 blur-[250px] rounded-full"></div>

			<!-- Pattern letters background - Mobile version -->
			<div class="absolute inset-0 opacity-60 lg:hidden">
				<img
					src={backgroundLettersMobile.src}
					alt=""
					class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[100%] h-[100%] object-cover"
				/>
			</div>

			<!-- Pattern letters background - Desktop version -->
			<div class="absolute inset-0 opacity-100 hidden lg:block">
				<img
					src={backgroundLettersDesktop.src}
					alt=""
					class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] object-cover"
				/>
			</div>
			
			<!-- Gradient de transition vers le fond plus foncé --> 
			<div class="absolute inset-0 top-[60%] bg-gradient-to-b from-transparent via-[#050F2F]/50 to-[#050F2F]"></div>
		</div>
		
		<!-- Contenu avec header et hero -->
		<div class="relative z-10">
			<Header />
			<Hero />
		</div>
	</div>
	<Benefits />
	<Features />
	<RPC />
	<FAQ />
  <CTA />
  <Footer />
</Layout>
